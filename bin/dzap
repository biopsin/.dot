#!/bin/sh
choice="$(printf "1  :  Clipmenu\n2  :  History\n3  :  Dmenu\n4  :  DoWin\n5  :  Trash" | dmenu | cut -d ' ' -f 1)"

case $choice in
    1) dclipmenu --zap && notify-send "Clipmenu" "\nCache   Purged" -t 5000 -u critical ;;
    2) > $HOME/.bash_history && notify-send "Bash" "\nHistory   Purged" -t 5000 -u critical ;;
    3) > $HOME/.cache/dmenu_history && notify-send "Dmenu" "History   Purged" -t 5000 -u critical ;;
    4) dowin -zap && notify-send "DoWin" "\n Cache   Purged" -t 5000 -u critical ;;
	5) trash --empty && notify-send "Trash" "\n Folder   Purged" -t 5000 -u critical ;;
esac
