INCLUDE = "vars"

Global {
# External Commands
	KeyPress = "XF86Tools" { Actions = "Exec /usr/local/etc/cron.hourly/nclock" }
	KeyPress = "XF86AudioLowerVolume" { Actions = "Exec /usr/local/etc/cron.daily/collection" }
	KeyPress = "XF86AudioRaiseVolume" { Actions = "Exec /usr/local/bin/ninfo -all" }
	KeyPress = "XF86AudioMute" { Actions = "Exec /usr/local/bin/nstats -all" }
	KeyPress = "XF86Mail" { Actions = "Exec /usr/local/etc/cron.hourly/checkmail" }
	KeyPress = "Print" { Actions = "Exec /usr/local/bin/dxcalib" }
	KeyPress = "Mod4 Print" { Actions = "Exec /usr/local/bin/dcapture" }
	KeyPress = "Pause" { Actions = "Exec //usr/local/bin/dowin" }
	KeyPress = "Mod4 Pause" { Actions = "Exec /usr/local/bin/dvoid" }
	KeyPress = "Mod4 space" { Actions = "Exec /usr/local/bin/drun-hist" }

	KeyPress = "Mod4 A" { Actions = "Exec /usr/local/bin/dclipmenu" }
	KeyPress = "Mod4 B" { Actions = "Exec /usr/local/bin/palemoon" }
	KeyPress = "Mod4 C" { Actions = "Exec ifrun galculator" }
	KeyPress = "Mod4 E" { Actions = "Exec ifrun SciTE" }
	KeyPress = "Mod4 F" { Actions = "Exec ifrun spacefm" }
	KeyPress = "Mod4 L" { Actions = "Exec /usr/local/bin/dsearch" }
	KeyPress = "Mod4 P" { Actions = "Exec ifrun fpm2" }
	KeyPress = "Mod4 T" { Actions = "Exec /usr/local/bin/tabbed" }
	KeyPress = "Ctrl Mod4 T" { Actions = "Exec $TERM" }
	KeyPress = "Mod4 W" { Actions = "Exec /usr/local/bin/palemoon -que" }

# Dunst shortcuts
	KeyPress = "Ctrl Mod4 Z" { Actions = "Exec dunstctl close-all" }
	KeyPress = "Ctrl Mod4 H" { Actions = "Exec dunstctl history-pop" }
        KeyPress = "Ctrl Mod4 space" { Actions = "Exec dunstctl context" }

# Switch desktop
	KeyPress = "Mod4 F1" { Actions = "GotoWorkspace 1; Exec /usr/local/bin/deskid" }
	KeyPress = "Mod4 F2" { Actions = "GotoWorkspace 2; Exec /usr/local/bin/deskid" }

# Send window to desktop
	KeyPress = "Mod4 Up" {
		Actions = "SendToWorkspace PrevV; Exec /usr/local/bin/deskid; GoToWorkspace PrevV" }
	KeyPress = "Mod4 Down" {
		Actions = "SendToWorkspace NextV; Exec /usr/local/bin/deskid; GoToWorkspace NextV" }

# Save and restore window position
	KeyPress = "Mod4 Scroll_Lock" { Actions = "Exec /usr/local/bin/wingp -s" }
	KeyPress = "Scroll_Lock" { Actions = "Exec /usr/local/bin/wingp -r" }

# Window placement
	KeyPress = "Mod4 Return" { Actions = "Exec wmctrl -r :ACTIVE: -e 0,640,220,2560,1600" }
	KeyPress = "Mod4 1" { Actions = "MoveToEdge TopLeft" }
	KeyPress = "Mod4 2" { Actions = "MoveToEdge TopRight" }
	KeyPress = "Mod4 3" { Actions = "MoveToEdge Center" }
	KeyPress = "Mod4 4" { Actions = "MoveToEdge BottomLeft" }
	KeyPress = "Mod4 5" { Actions = "MoveToEdge BottomRight" }

# Window management
	KeyPress = "F12" { Actions = "Toggle FullScreen" }
	KeyPress = "Mod4 I" { Actions = "Exec /usr/local/bin/dowin" }
	KeyPress = "Mod4 O" { Actions = "Toggle AlwaysOnTop" }
	KeyPress = "Mod4 Q" { Actions = "Close" }
	KeyPress = "Mod4 S" { Actions = "Toggle Sticky" }
	KeyPress = "Mod4 V" { Actions = "Toggle Maximized False True" }

# Window tiling
#	KeyPress = "Mod4 F9" { Actions = "SetLayouter TILE_Dwindle" }
#	KeyPress = "Mod4 F10" { Actions = "SetLayouter TILE_Stacked" }
#	KeyPress = "Mod4 F11" { Actions = "SetLayouter TILE_Boxed" }
#	KeyPress = "Mod4 F12" { Actions = "SetLayouter TILE_Fib" }

# Switch windows
	KeyPress = "Mod4 Tab" { Actions = "Exec /usr/local/bin/dowin -ws" }
	KeyPress = "Mod1 Tab" { Actions = "Exec /usr/local/bin/skippy" }
	KeyPress = "Mod4 Right" { Actions = "NextFrame AlwaysRaise" }
	KeyPress = "Mod4 Left" { Actions = "PrevFrame AlwaysRaise" }

# Launch menus
	KeyPress = "Mod4 Menu" { Actions = "ShowMenu Root" }
	KeyPress = "Menu" { Actions = "ShowMenu Window" }
}

Menu {
# Keys in menus
	KeyPress = "Down" { Actions = "NextItem" }
	KeyPress = "Up" { Actions = "PrevItem" }
	KeyPress = "Right" { Actions = "EnterSubmenu" }
	KeyPress = "Left" { Actions = "LeaveSubmenu" }
	KeyPress = "Return" { Actions = "Select" }
	KeyPress = "space" { Actions = "Select" }
	KeyPress = "Escape" { Actions = "Close" }
}
